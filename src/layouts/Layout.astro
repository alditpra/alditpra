---
import '../styles/global.css';
import { SITE_CONFIG } from '../lib/constants';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_CONFIG.name, description = SITE_CONFIG.description } = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content="link directory, personal repository, resource collection, tools" />
    <meta name="author" content={SITE_CONFIG.author} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Preconnect for faster font loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Preconnect for Google Sheets data -->
    <link rel="preconnect" href="https://docs.google.com" />
    
    <!-- Google Fonts - Inter with only needed weights and display=swap -->
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" 
      rel="stylesheet"
    />
    
    <!-- Preload critical font file for better performance -->
    <link
      rel="preload"
      href="https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_fvQtMwCp50KnMw2boKoduKmMEVuLyfAZ9hiA.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Preload LCP image -->
    <link
      rel="preload"
      href="/avatar.webp"
      as="image"
      type="image/webp"
      fetchpriority="high"
      crossorigin
    />

    <title>{title}</title>
    
    <!-- Smooth page transitions -->
    <ViewTransitions />
  </head>
  <body class="font-sans antialiased bg-zinc-50">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-zinc-900 focus:text-white focus:rounded-lg"
    >
      Langsung ke konten
    </a>
    <main id="main-content" class="min-h-screen">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="relative z-10 py-8 text-center">
      <div class="container mx-auto px-4">
        <p class="text-sm text-zinc-400 font-medium">
          Made with ❤️ and ☕ by <span class="text-zinc-600">alditpra</span>
        </p>
      </div>
    </footer>
  </body>
</html>

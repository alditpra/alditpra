---
import "../styles/global.css";
import { SITE_CONFIG } from "../lib/constants";

import ThemeToggle from "../components/ui/ThemeToggle.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_CONFIG.name, description = SITE_CONFIG.description } =
  Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="keywords"
      content="link directory, personal repository, resource collection, tools"
    />
    <meta name="author" content={SITE_CONFIG.author} />

    <!-- SEO: Canonical URL -->
    <link
      rel="canonical"
      href={new URL(Astro.url.pathname, SITE_CONFIG.url).href}
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content={new URL(Astro.url.pathname, SITE_CONFIG.url).href}
    />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content={new URL(SITE_CONFIG.ogImage, SITE_CONFIG.url).href}
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content={`${SITE_CONFIG.name} - ${SITE_CONFIG.tagline}`}
    />
    <meta property="og:site_name" content={SITE_CONFIG.name} />
    <meta property="og:locale" content="id_ID" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:url"
      content={new URL(Astro.url.pathname, SITE_CONFIG.url).href}
    />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={new URL(SITE_CONFIG.ogImage, SITE_CONFIG.url).href}
    />
    <meta
      name="twitter:image:alt"
      content={`${SITE_CONFIG.name} - ${SITE_CONFIG.tagline}`}
    />

    <!-- Theme Color -->
    <meta name="theme-color" content="#7f73ff" />
    <meta
      name="theme-color"
      content="#1a1a1a"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Critical CSS: Inlined for faster initial paint -->
    <style>
      :root {
        --background: #fafafa;
        --foreground: #18181b;
        --text-primary: #18181b;
        --text-secondary: #3f3f46;
        --divider: #e4e4e7;
        --candy-teal: #35e2c3;
        --candy-blue: #14d0f0;
        --candy-purple: #7f73ff;
        --candy-pink: #ff83c3;
        --candy-yellow: #ffe552;
      }
      html.dark {
        --background: #18181b;
        --foreground: #fafafa;
        --text-primary: #fafafa;
        --text-secondary: #a1a1aa;
        --divider: #3f3f46;
      }
      @media (prefers-color-scheme: dark) {
        :root:not(.light) {
          --background: #18181b;
          --foreground: #fafafa;
          --text-primary: #fafafa;
          --text-secondary: #a1a1aa;
          --divider: #3f3f46;
        }
      }
      *,
      ::before,
      ::after {
        box-sizing: border-box;
      }
      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
          Cantarell, "Helvetica Neue", Arial, sans-serif;
        background: linear-gradient(
          135deg,
          #fdfbff 0%,
          #f3f0ff 15%,
          rgba(127, 115, 255, 0.1) 30%,
          rgba(20, 208, 240, 0.08) 50%,
          rgba(255, 131, 195, 0.1) 70%,
          #fff5fb 85%,
          #fafafa 100%
        );
        color: var(--foreground);
        min-height: 100vh;
        margin: 0;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      html.dark body {
        background:
          radial-gradient(
            circle at 15% 20%,
            rgba(127, 115, 255, 0.15) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 85% 30%,
            rgba(20, 208, 240, 0.12) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 50% 70%,
            rgba(255, 131, 195, 0.14) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 20% 80%,
            rgba(53, 226, 195, 0.1) 0%,
            transparent 35%
          ),
          #0a0a0f;
      }
      html.light body {
        background: linear-gradient(
          135deg,
          #fdfbff 0%,
          #f3f0ff 15%,
          rgba(127, 115, 255, 0.1) 30%,
          rgba(20, 208, 240, 0.08) 50%,
          rgba(255, 131, 195, 0.1) 70%,
          #fff5fb 85%,
          #fafafa 100%
        );
      }
      @media (prefers-color-scheme: dark) {
        html:not(.dark):not(.light) body {
          background:
            radial-gradient(
              circle at 15% 20%,
              rgba(127, 115, 255, 0.15) 0%,
              transparent 40%
            ),
            radial-gradient(
              circle at 85% 30%,
              rgba(20, 208, 240, 0.12) 0%,
              transparent 40%
            ),
            radial-gradient(
              circle at 50% 70%,
              rgba(255, 131, 195, 0.14) 0%,
              transparent 40%
            ),
            radial-gradient(
              circle at 20% 80%,
              rgba(53, 226, 195, 0.1) 0%,
              transparent 35%
            ),
            #0a0a0f;
        }
      }
      .min-h-screen {
        min-height: 100vh;
      }
    </style>

    <!-- Resource hints for critical domains - Optimized order -->
    <link rel="preconnect" href="https://docs.google.com" />
    <link rel="preconnect" href="https://drive.google.com" />
    <link rel="dns-prefetch" href="https://docs.google.com" />
    <link rel="dns-prefetch" href="https://drive.google.com" />

    <!-- Preload LCP image - Responsive -->
    <link
      rel="preload"
      href="/avatar-desktop.webp"
      as="image"
      type="image/webp"
      imagesrcset="/avatar-desktop.webp 208w, /avatar-mobile.webp 308w"
      imagesizes="(min-width: 640px) 104px, 154px"
      fetchpriority="high"
    />

    <title>{title}</title>

    <!-- Theme Initialization -->
    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };

      const applyTheme = () => {
        const isDark = getThemePreference() === "dark";
        if (isDark) {
          document.documentElement.classList.add("dark");
          document.documentElement.classList.remove("light");
        } else {
          document.documentElement.classList.add("light");
          document.documentElement.classList.remove("dark");
        }
      };

      // Apply on initial load
      applyTheme();

      // Re-apply on navigation (View Transitions)
      document.addEventListener("astro:after-swap", applyTheme);

      // Global toggle function
      window.toggleTheme = () => {
        const element = document.documentElement;
        const isDarkNow = element.classList.contains("dark");

        if (isDarkNow) {
          // Switch to light
          element.classList.remove("dark");
          element.classList.add("light");
          localStorage.setItem("theme", "light");
        } else {
          // Switch to dark
          element.classList.remove("light");
          element.classList.add("dark");
          localStorage.setItem("theme", "dark");
        }
      };
    </script>
  </head>
  <body class="font-sans antialiased">
    <!-- Floating Theme Toggle - Persistent across all pages -->

    <main id="main-content" class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 py-8 text-center">
      <div class="container mx-auto px-4">
        <p class="text-sm font-medium" style="color: var(--text-secondary);">
          Made with â˜• by <span
            class="font-semibold"
            style="color: var(--text-primary);">alditpra</span
          >
        </p>
      </div>
    </footer>

    <!-- NUCLEAR FLOATING TOGGLE - Max Z-Index, Bottom of DOM, Exclusive Stacking Context -->
    <div
      style="position: fixed; top: 1.25rem; right: 1.25rem; z-index: 2147483647; pointer-events: auto; isolation: isolate;"
    >
      <div class="shadow-lg rounded-full bg-white/10 backdrop-blur-sm">
        <ThemeToggle />
      </div>
    </div>
  </body>
</html>

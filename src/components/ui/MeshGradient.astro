<div class="fixed top-0 left-0 right-0 h-[500px] pointer-events-none z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-indigo-50/50 via-white/50 to-white/0 backdrop-blur-3xl" />
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-[#7f73ff]/20 rounded-full blur-3xl mix-blend-multiply animate-blob" />
    <div class="absolute top-0 right-1/4 w-96 h-96 bg-[#14d0f0]/20 rounded-full blur-3xl mix-blend-multiply animate-blob animation-delay-2000" />
    <div class="absolute -top-32 left-1/2 w-96 h-96 bg-[#35e2c3]/20 rounded-full blur-3xl mix-blend-multiply animate-blob animation-delay-4000" />
</div>

<style>
    @keyframes blob {
        0% { transform: translate(0px, 0px) scale(1); }
        33% { transform: translate(30px, -50px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
        100% { transform: translate(0px, 0px) scale(1); }
    }
    .animate-blob {
        animation: blob 7s infinite;
    }
    .animation-delay-2000 {
        animation-delay: 2s;
    }
    .animation-delay-4000 {
        animation-delay: 4s;
    }
</style>

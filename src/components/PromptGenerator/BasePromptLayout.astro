---
interface Props {
  title: string;
  description: string;
  showTips?: boolean;
}

const { title, description, showTips = false } = Astro.props;
---

<div class="prompt-layout-container">
  <div class="prompt-layout-header">
    <h1>{title}</h1>
    <p class="description">{description}</p>
  </div>

  <div class="prompt-layout-content">
    <div class="prompt-layout-form">
      <slot name="form" />
    </div>

    <div class="prompt-layout-preview">
      <slot name="preview" />
    </div>
  </div>

  {showTips && (
    <div class="prompt-layout-tips">
      <slot name="tips" />
    </div>
  )}
</div>

<style>
  .prompt-layout-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .prompt-layout-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .prompt-layout-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .prompt-layout-header .description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .prompt-layout-content {
    display: grid;
    grid-template-columns: 45% 55%;
    gap: 2rem;
    align-items: start;
  }

  .prompt-layout-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .prompt-layout-preview {
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    overflow: hidden;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .prompt-layout-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .prompt-layout-preview {
      position: relative;
      top: 0;
      max-height: none;
    }
  }

  @media (max-width: 768px) {
    .prompt-layout-header h1 {
      font-size: 2rem;
    }

    .prompt-layout-header .description {
      font-size: 1rem;
    }

    .prompt-layout-container {
      padding: 1.5rem 1rem;
    }

    .prompt-layout-header {
      margin-bottom: 2rem;
    }
  }
</style>

---
import ToolPageLayout from "../layouts/ToolPageLayout.astro";
import InputModeSelector from "../components/SLOT/InputModeSelector.astro";
import FileUploader from "../components/SLOT/FileUploader.astro";
import ManualInput from "../components/SLOT/ManualInput.astro";
import ControlPanel from "../components/SLOT/ControlPanel.astro";
import VerticalScrollPicker from "../components/SLOT/VerticalScrollPicker.astro";
import ConfirmationModal from "../components/SLOT/ConfirmationModal.astro";
import ResultsDisplay from "../components/SLOT/ResultsDisplay.astro";

const title = "SLOT - Saatnya LOtre Tanya";
const description =
  "Sistem pemilihan acak mahasiswa untuk sesi tanya jawab di kelas.";
---

<ToolPageLayout
  title={title}
  subtitle="SLOT"
  description={description}
  themeColor="candy-purple"
>
  <div slot="header-icon">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="32"
      height="32"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-[color:color-mix(in_srgb,var(--candy-purple),black_30%)] dark:text-[color:color-mix(in_srgb,var(--candy-purple),white_40%)]"
    >
      <rect width="12" height="12" x="2" y="10" rx="2" ry="2"></rect>
      <path
        d="m17.92 14 3.5-3.5a2.24 2.24 0 0 0 0-3l-5-4.92a2.24 2.24 0 0 0-3 0L10 6"
      ></path>
      <path d="M6 18h.01"></path>
      <path d="M10 14h.01"></path>
      <path d="M15 6h.01"></path>
      <path d="M18 9h.01"></path>
    </svg>
  </div>

  {/* Main Content */}
  <div id="input-section" class="mb-12">
    {/* Input Data Section */}
    <div
      class="p-6 rounded-3xl bg-white/90 dark:bg-zinc-900/90 border border-white/60 dark:border-zinc-700/50 shadow-lg mb-8"
    >
      <h2 class="text-xl font-bold text-zinc-800 dark:text-zinc-100 mb-4">
        Input Data Mahasiswa
      </h2>

      {/* Input Mode Selector */}
      <InputModeSelector />

      {/* File Upload Area */}
      <FileUploader />

      {/* Manual Input Area */}
      <ManualInput />
    </div>

    {/* Control Panel */}
    <ControlPanel />
  </div>

  {/* Section 2: Results & History */}
  <div id="results-section" class="mb-8">
    <ResultsDisplay />
  </div>

  {/* Section 3: Fullscreen Animation Overlay */}
  <VerticalScrollPicker />

  {/* Confirmation Modal */}
  <ConfirmationModal />
</ToolPageLayout>
